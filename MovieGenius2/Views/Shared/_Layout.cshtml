<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieGenius</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">

    @Styles.Render("~/Content/css")

    @RenderSection("scripts", required: false)

</head>
<body>

    <div class="container">
        @{ /*todo navbar hides behind top bar of mobile devices*/ }
        <nav class="navbar navbar-inverse fixed-top navbar-expand" style="background-color:black">
            <div class="container-fluid">
                <div class="navbar-header">

                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/Images/logo2.png" />
                    </a>
                </div>

                <div id="navbar1" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav ml-auto">
                        <li><a href="@Url.Action("About", "Home")">About</a></li>

                    </ul>
                </div>
            </div>
        </nav>
    </div>


    <div class="body">
        <div class="page">

            @Html.Action("SearchBar")
            <div class="row">
                <div class="col-md-3 order-md-first order-last">
                    @Html.Action("Menu")
                </div>
                <div class="col-md-8">
                    @RenderBody()
                </div>

            </div>

        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>



</body>
</html>
